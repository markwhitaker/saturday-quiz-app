<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/themeTipView"
    android:layout_width="@dimen/theme_tip_size"
    android:layout_height="@dimen/theme_tip_size"
    android:layout_margin="@dimen/inner_margin"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/themeTipDots"
        android:layout_width="@dimen/theme_tip_size"
        android:layout_height="@dimen/theme_tip_size"
        tools:src="@drawable/ic_dots_light"
        tools:tint="@color/light_foreground"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/themeTipDial"
        android:layout_width="@dimen/theme_tip_size"
        android:layout_height="@dimen/theme_tip_size"
        android:src="@drawable/ic_dial"
        tools:rotation="30"
        tools:tint="@color/light_foreground"
        android:background="@android:color/transparent"
        />

</FrameLayout>
