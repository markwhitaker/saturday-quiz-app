<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true">

    <View
        android:id="@+id/scoreHighlightDiscView"
        android:layout_width="@dimen/score_icon"
        android:layout_height="@dimen/score_icon"
        android:background="@drawable/disc"
        android:backgroundTint="@color/medium_foreground_highlight"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scoreDimmedRingView"
        android:layout_width="@dimen/score_icon"
        android:layout_height="@dimen/score_icon"
        android:src="@drawable/ic_score_ring"
        tools:tint="@color/medium_foreground_very_dimmed"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scoreTickViewHighlight"
        android:layout_width="@dimen/score_icon"
        android:layout_height="@dimen/score_icon"
        android:src="@drawable/ic_score_tick"
        android:background="@android:color/transparent"
        tools:tint="@color/medium_foreground_highlight"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scoreTickViewDark"
        android:layout_width="@dimen/score_icon"
        android:layout_height="@dimen/score_icon"
        android:src="@drawable/ic_score_tick"
        android:background="@android:color/transparent"
        tools:tint="@color/background"
        />

</FrameLayout>
