<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/outer_margin"
    android:background="@color/background"
    >

    <!-- WHAT LINKS... -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/whatLinksView"
        style="@style/WhatLinksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/numberView"
        android:text="@string/what_links_prefix"
        tools:textColor="@color/light_foreground_dimmed"
        tools:drawableTint="@color/light_foreground_dimmed"
        />

    <!-- Question number -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/numberView"
        style="@style/QuestionNumberText"
        android:layout_width="@dimen/number_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/whatLinksView"
        tools:text="1."
        tools:textColor="@color/light_foreground"
        />

    <!-- Question -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/questionView"
        style="@style/QuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/numberView"
        android:layout_below="@id/whatLinksView"
        tools:text="In what novel is Constance unhappily married to Sir Clifford?"
        tools:textColor="@color/light_foreground"
        />

    <!-- Answer -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/answerView"
        style="@style/AnswerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/numberView"
        android:layout_below="@id/questionView"
        android:layout_marginTop="@dimen/inner_margin"
        tools:text="Lady Chatterleyâ€™s Lover"
        tools:textColor="@color/light_foreground_highlight"
        />

    <FrameLayout
        android:id="@+id/scoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/scoreRingView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_score_ring_outer"
            android:background="@android:color/transparent"
            tools:tint="@color/light_foreground_highlight"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_score_ring_inner"
            android:background="@android:color/transparent"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/scoreTickView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_score_tick"
            tools:tint="@color/light_foreground_highlight"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

</RelativeLayout>
