<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/background</item>
    </style>

    <style name="WhatLinksText">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/what_links_text</item>
        <item name="android:textSize">@dimen/what_links_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableStart">@drawable/ic_link</item>
        <item name="android:drawablePadding">@dimen/what_links_icon_padding</item>
    </style>

    <style name="QuestionText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/question_text</item>
        <item name="android:color">@color/question_text</item>
    </style>

    <style name="QuestionNumberText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/question_text</item>
        <item name="android:textColor">@color/question_text</item>
    </style>

    <style name="AnswerText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/answer_text</item>
        <item name="android:textColor">@color/answer_text</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="QuizDateText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/date_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/date_text</item>
    </style>

    <style name="QuizScoreText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textSize">@dimen/score_text</item>
        <item name="android:textColor">@color/score_text</item>
        <item name="android:layout_marginTop">@dimen/inner_margin</item>
    </style>
</resources>
