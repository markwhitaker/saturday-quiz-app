<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback" />

    <style name="TextDefaults">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="QuestionText" parent="TextDefaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionNumberText" parent="TextDefaults">
        <item name="android:layout_width">@dimen/number_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnswerText" parent="TextDefaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText" parent="TextDefaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background</item>
    </style>
</resources>
