<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.Leanback">
        <item name="android:background">@color/background</item>
    </style>

    <style name="TextDefaults">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="QuestionText" parent="TextDefaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/question_text</item>
        <item name="android:textSize">@dimen/question_text</item>
    </style>

    <style name="QuestionNumberText" parent="TextDefaults">
        <item name="android:layout_width">@dimen/number_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/question_text</item>
        <item name="android:textSize">@dimen/question_text</item>
    </style>

    <style name="AnswerText" parent="TextDefaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/answer_text</item>
        <item name="android:textSize">@dimen/answer_text</item>
    </style>

    <style name="TitleText" parent="TextDefaults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="QuizDateText" parent="TextDefaults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/outer_margin</item>
        <item name="android:textColor">@color/date_text</item>
        <item name="android:textSize">@dimen/date_text</item>
    </style>
</resources>
